Import('env')

libname = 'nx'

# binaries
env.NXLibrary(target=libname, source=[
    'src/main/application.cc',
    'src/main/time.cc',
    'src/main/string_util.cc',
])

# add our include path
env.Append(CPPPATH=[env.Root('include/main')])

# dependencies
if env['cross'] != 'win':
  env.UseSystemLibrary(['rt'],shared=True)

