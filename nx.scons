Import('env')

libname = 'nx'

# binaries
env.NXLibrary(target=libname, source=[
  'src/application.cpp',
  'src/time.cpp',
])

# add our include path 
env.Append(CPPPATH=[env.Root('include')])

# dependencies
if env['cross'] != 'win':
  env.UseSystemLibrary(['rt'],shared=True)

